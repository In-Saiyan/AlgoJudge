# Environment Variables Template
# Copy this file to .env and fill in appropriate values

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
RUST_LOG=info

# Database Configuration
DATABASE_URL=postgresql://algojudge:your_password_here@localhost:5432/algojudge
DATABASE_MAX_CONNECTIONS=20

# Redis Configuration
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRY_HOURS=24
REFRESH_TOKEN_EXPIRY_DAYS=7

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock
BENCHMARK_NETWORK=algojudge-benchmark

# Storage Configuration
SUBMISSIONS_PATH=/data/submissions
TEST_CASES_PATH=/data/test_cases

# Benchmark Configuration
BENCHMARK_ITERATIONS=5
BENCHMARK_WARMUP_RUNS=1
BENCHMARK_TIME_LIMIT_MS=10000
BENCHMARK_MEMORY_LIMIT_MB=512
